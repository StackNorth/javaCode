package cn.bjsxt.testFile;

import java.awt.Color;
import java.awt.Font;
import java.awt.Frame;
import java.awt.Graphics;
import java.awt.Panel;

public class Text extends Frame extends Panel{
	public void paintComponent(Graphics g)//¸²¸ÇpaintComponentº¯Êý
	{
		super.paintComponents(g);
		Font f=new Font("ËÎÌå",Font.BOLD+Font.ITALIC,20);
		g.setFont(f);
		g.drawString("I am a student",30,20);
	}
	public static void main(String[] args) {
		Frame f = new Frame();
		f.setUndecorated(true);
		f.setBackground(Color.red);
		f.setBounds(75, 75, 260, 90);
		Panel p =new Panel();
		Font font =new Font("ËÎÌå",Font.BOLD,38);
		p.setBounds(5,5,250,80);
		p.setVisible(true);
		p.setBackground(Color.white);
		f.setLayout(null);
		f.add(p);
		f.setVisible(true);
	}
}
